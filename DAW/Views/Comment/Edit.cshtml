@model DAW.Models.Comment
@using (Html.BeginForm(actionName: "Edit", controllerName: "Comment", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.TaskId)
    @Html.Label("Content", "Edit your comment")
    <br />
    @Html.EditorFor(m => m.Content)
    <br />
    <button class="btn btn-sm btn-success" type="submit">Edit comment</button>
}

